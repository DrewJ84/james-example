@using System.Collections.Specialized;
@{
    ViewBag.Title = "ReturnPage";
    NameValueCollection nv = ViewBag.result;
}

@if (ViewBag.status == "paypal failed")
{
    <h2>Checkout</h2>
    <p>Error Code: <span class="bold-word">@nv.GetValues("L_ERRORCODE0").First()</span></p>
    <p>Short Message: <span class="bold-word">@nv.GetValues("L_SHORTMESSAGE0").First()</span></p>
    <p>Long Message: <span class="bold-word">@nv.GetValues("L_LONGMESSAGE0").First()</span></p>
}
else
{
    <h2>Payment Successfully</h2>
    <p>Transaction: <strong>@ViewBag.transactionId</strong></p>
    <p>Total Amount: <strong>@ViewBag.currency </strong><strong>@ViewBag.amt</strong></p>
    
    <a href="https://merchant.paypal.com/cms_content/CA/en_US/files/merchant/PP_ExpressCheckout_IntegrationGuide_DGEnt.pdf">Start Download PayPal Digital Goods Integration Guide</a>
}